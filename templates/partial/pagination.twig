{% if posts.pagination.pages is not empty %}
    <ul class="pagination">
        <li class="pagination__item pagination__item--first">
            {% if pagination.pages|first and pagination.pages|first.current != true %}
                <a href="{{ pagination.pages|first.link }}" class="pagination__link">First</a>
            {% else %}
                <span class="pagination__link pagination__link--disabled">First</span>
            {% endif %}
        </li>

        <li class="pagination__item pagination__item--prev">
            {% if pagination.prev %}
                <a href="{{ pagination.prev.link }}" class="pagination__link">Previous</a>
            {% else %}
                <span class="pagination__link pagination__link--disabled">Previous</span>
            {% endif %}
        </li>

        {% for page in pagination.pages %}
            {% if page.link %}
                <li class="pagination__item">
                    <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                </li>
            {% else %}
                <li class="pagination__item pagination__item--current">
                    <span class="{{ page.class }} pagination__link pagination__link--disabled">{{ page.title }}</span>
                </li>
            {% endif %}
        {% endfor %}

        <li class="pagination__item pagination__item--next">
            {% if pagination.next %}
                <a href="{{ pagination.next.link }}" class="pagination__link">Next</a>
            {% else %}
                <span class="pagination__link pagination__link--disabled">Next</span>
            {% endif %}
        </li>

        <li class="pagination__item pagination__item--last">
            {% if pagination.pages|last and pagination.pages|last.current != true %}
                <a href="{{ pagination.pages|last.link }}" class="pagination__link">Last</a>
            {% else %}
                <span class="pagination__link pagination__link--disabled">Last</span>
            {% endif %}
        </li>
    </ul>
{% endif %}
