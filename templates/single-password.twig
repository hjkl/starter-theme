{% extends "layout.twig" %}

{% block main %}
	<div class="passworded">
		<form class="form passworded__form" action="{{ site.site_url }}/wp-login.php?action=postpass" method="POST">
			<label class="form__label passworded__label" for="passworded-{{ post.id }}">Password:</label>
			<input class="form__input passworded__input" name="post_password" id="passworded-{{ post.id }}" type="password" placeholder="Password" size="20" maxlength="20">
			<button type="submit" class="form__btn passworded__btn">Submit</button>
		</form>
	</div>
{% endblock %}
